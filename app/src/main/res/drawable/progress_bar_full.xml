<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners
            android:radius="8dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/budget_progress_boarder" />
            <solid android:color="@color/budget_progress_background"/>

        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#234"
                    android:centerColor="#234"
                    android:centerY="0.75"
                    android:endColor="#a24"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">

        <clip>
            <shape>
                <corners
                    android:radius="8dp"/>
                <solid android:color="@color/budget_progress_full_background"/>
            </shape>
        </clip>
    </item>

</layer-list>