    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:id="@+id/info_p2_card_total_earnings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp"
        card_view:cardMaxElevation="6dp"
        app:contentPaddingLeft="8dp"
        app:contentPaddingRight="8dp"
        app:contentPaddingTop="8dp"
        app:contentPaddingBottom="8dp"
        android:layout_margin="8dp"
        card_view:cardBackgroundColor="@color/input_up_buttons_background"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info_earnings_total"
            android:id="@+id/info_p2_total_earnings_label"
            android:layout_gravity="left"
            android:layout_marginLeft="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/info_p2_total_earnings_value"
            android:layout_marginRight="8dp"
            android:layout_gravity="right"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:id="@+id/info_p2_card_month_transactions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp"
        card_view:cardMaxElevation="6dp"
        app:contentPaddingLeft="8dp"
        app:contentPaddingRight="8dp"
        app:contentPaddingTop="8dp"
        app:contentPaddingBottom="8dp"
        android:layout_margin="8dp"
        card_view:cardBackgroundColor="@color/input_up_buttons_background"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
